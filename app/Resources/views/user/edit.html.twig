{% extends 'layout.html.twig' %}

{% block title %}Editar Perfil | d'Ca単as{% endblock %}

{% block stylesheets %}
    <link rel="stylesheet" href="{{ asset('assets/css/file-input-component.css') }}">
    <link rel="stylesheet" href="{{ asset('assets/css/jquery.datetimepicker.min.css') }}">
{% endblock %}

{% block content %}
    {{ form_start(formulario) }}
    <div class="container bootstrap snippets">
    <div class="row">
    <div class="col-lg-3 col-md-3 col-sm-4">
        <div class="panel rounded shadow">
            <div class="panel-body">
                <div class="inner-all">
                    <ul class="list-unstyled">
                        <li class="text-center">
                            <div class="avatar-perfil">
                                {% if app.user.imagenPerfil == null %}
                                    <img src="{{ asset('assets/images/default_user.png') }}" alt="avatar" />
                                {% else %}
                                    <img src="{{ asset('uploads/users/img/profile/'~app.user.imagenPerfil) }}" alt="avatar" />
                                {% endif %}
                            </div>
                        </li>
                        <li class="text-center">
                        <div class="box">
                            {{ form_row(formulario.imagenPerfil) }}
                            {#<input type="file" name="file-1[]" id="appbundle_usuario_imagenPerfil" class="inputfile inputfile-1" data-multiple-caption="{count} files selected" multiple />#}
                            <label for="appbundle_usuario_imagenPerfil" class="label-name-file">
                                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="17" viewBox="0 0 20 17">
                                    <path d="M10 0l-5.2 4.9h3.3v5.1h3.8v-5.1h3.3l-5.2-4.9zm9.3 11.5l-3.2-2.1h-2l3.4 2.6h-3.5c-.1 0-.2.1-.2.1l-.8 2.3h-6l-.8-2.2c-.1-.1-.1-.2-.2-.2h-3.6l3.4-2.6h-2l-3.2 2.1c-.4.3-.7 1-.6 1.5l.6 3.1c.1.5.7.9 1.2.9h16.3c.6 0 1.1-.4 1.3-.9l.6-3.1c.1-.5-.2-1.2-.7-1.5z"/>
                                </svg>
                                <span id="name_file">Escoge una imagen&hellip;</span>
                            </label>
				        </div>
                        </li>
                    </ul>
                </div>
            </div>
        </div><!-- /.panel -->

        <div class="panel panel-theme rounded shadow">
            <div class="panel-heading">
                <div class="pull-left">
                    <h3 class="panel-title">Contact</h3>
                </div>
                <div class="pull-right">
                    <a href="#" class="btn btn-sm btn-success"><i class="fa fa-facebook"></i></a>
                    <a href="#" class="btn btn-sm btn-success"><i class="fa fa-twitter"></i></a>
                    <a href="#" class="btn btn-sm btn-success"><i class="fa fa-google-plus"></i></a>
                </div>
                <div class="clearfix"></div>
            </div><!-- /.panel-heading -->
            <div class="panel-body no-padding rounded">
                <ul class="list-group no-margin">
                    <li class="list-group-item"><i class="fa fa-envelope mr-5"></i> support@bootdey.com</li>
                    <li class="list-group-item"><i class="fa fa-globe mr-5"></i> www.bootdey.com</li>
                    <li class="list-group-item"><i class="fa fa-phone mr-5"></i> +6281 903 xxx xxx</li>
                </ul>
            </div><!-- /.panel-body -->
        </div><!-- /.panel -->

    </div>
    <div class="col-lg-5 col-md-5 col-sm-12">
        <div class="row mt20">
            {{ form_row(formulario.nombre) }}
            {{ form_row(formulario.apellidos) }}
            {{ form_row(formulario.fechaNacimiento) }}
            <hr>
            {{ form_row(formulario.ciudad) }}
            {{ form_row(formulario.provincia) }}
            <hr>
            {{ form_row(formulario.descripcion) }}
            <hr>
            <div class="text-center">
                <h5>多Quieres modificar tu contrase単a?</h5>
                <a href="#" class="btn btn-primary">
                    <i class="fa fa-key"></i>
                    Modificar mi contrase単a
                </a>
            </div>

            <div class="clearfix">
            <hr>

            <div class="col-md-2 col-lg-2"></div>
            <div class="col-md-10 col-lg-10">
            <a href="{{ path('perfil') }}" class="btn btn-default pull-left">
                Cancelar
            </a>
            <button type="submit" class="btn btn-success pull-right">Guardar</button>
            </div>

        </div>
    </div>
    {{ form_end(formulario) }}
{% endblock %}

{% block javascripts %}
    <script src="{{ asset('assets/scripts/datetimepicker/jquery.datetimepicker.full.min.js') }}"></script>
    <script src="{{ asset('assets/scripts/js/custom-file-input.js') }}"></script>
    <script type="text/javascript">
    $(function () {
        jQuery.datetimepicker.setLocale('es');
        jQuery('.form-fecha').datetimepicker({
            lang: 'es',
            timepicker: false,
            maxDate: new Date(),
            format:'Y-m-d'
        });
    });
    </script>
{% endblock %}